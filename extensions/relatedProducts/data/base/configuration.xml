<ConfigurationGroup>
	<title>Related Products</title>
	<key>relatedProducts</key>
	<description>Configuration Settings For The Related Products Extension</description>
	<tabs>
		<general>
			<title>General</title>
			<description>General Extension Settings</description>
			<configurations>
				<EXTENSION_RELATED_PRODUCTS_INSTALLED editable="false">
					<title>Installation Status</title>
					<value>False</value>
					<description></description>
				</EXTENSION_RELATED_PRODUCTS_INSTALLED>
				<EXTENSION_RELATED_PRODUCTS_ENABLED>
					<title>Enable Related Products</title>
					<value>True</value>
					<description>Enable Or Disable The Related Products Extension</description>
					<set_function>
						<type>radio</type>
						<values>
							<value>True</value>
							<value>False</value>
						</values>
					</set_function>
				</EXTENSION_RELATED_PRODUCTS_ENABLED>
				<EXTENSION_RELATED_PRODUCTS_LISTING_METHOD>
					<title>Display Method</title>
					<value>Row</value>
					<description>Method for displaying related products</description>
					<set_function>
						<type>radio</type>
						<values>
							<value>Row</value>
						</values>
					</set_function>
				</EXTENSION_RELATED_PRODUCTS_LISTING_METHOD>
				<EXTENSION_RELATED_PRODUCTS_DISPLAY_NUMBER>
					<title>Number of related products to display</title>
					<value>4</value>
					<description>Number of related products</description>
				</EXTENSION_RELATED_PRODUCTS_DISPLAY_NUMBER>
				<EXTENSION_RELATED_PRODUCTS_DISPLAY_TYPE>
					<title>Use admin related products, or use other criteria</title>
					<value>Admin</value>
					<description>Use admin related products, or use other criteria</description>
					<set_function>
						<type>radio</type>
						<values>
							<value>Admin</value>
							<value>Other Criteria</value>
						</values>
					</set_function>
				</EXTENSION_RELATED_PRODUCTS_DISPLAY_TYPE>
				<EXTENSION_RELATED_PRODUCTS_SHOW_ON_TAB>
					<title>Show related products on tab</title>
					<value>True</value>
					<description>Show related products on tab</description>
					<set_function>
						<type>radio</type>
						<values>
							<value>True</value>
							<value>False</value>
						</values>
					</set_function>
				</EXTENSION_RELATED_PRODUCTS_SHOW_ON_TAB>
				<EXTENSION_RELATED_PRODUCTS_SHOPPING_CART>
					<title>Show related products under shopping cart</title>
					<value>True</value>
					<description>Show related products of items in shopping cart</description>
					<set_function>
						<type>radio</type>
						<values>
							<value>True</value>
							<value>False</value>
						</values>
					</set_function>
				</EXTENSION_RELATED_PRODUCTS_SHOPPING_CART>
			</configurations>
		</general>
        <custom>
            <title>Custom Products Fields</title>
            <description>Search related products custom fields</description>
            <configurations>
                <EXTENSION_RELATED_PRODUCTS_CUSTOM_FIELDS>
                    <title>Select Custom Fields</title>
                    <description>Select Custom Fields</description>
                    <sort_order>29</sort_order>
                    <set_function><![CDATA[tep_cfg_select_multioption(tep_cfg_pull_down_custom_list(),]]></set_function>
                </EXTENSION_RELATED_PRODUCTS_CUSTOM_FIELDS>
            </configurations>
        </custom>
        <attributes>
            <title>Products Attributes</title>
            <description>Search related products attributes</description>
            <configurations>
                <EXTENSION_RELATED_PRODUCTS_ATTRIBUTES>
                    <title>Select Attributes</title>
                    <description>Select Product Attributes</description>
                    <sort_order>29</sort_order>
                    <set_function><![CDATA[tep_cfg_select_multioption(tep_cfg_pull_down_attributes_list(),]]></set_function>
                </EXTENSION_RELATED_PRODUCTS_ATTRIBUTES>
            </configurations>
        </attributes>
	</tabs>
</ConfigurationGroup>