<ConfigurationGroup>
	<title>PDF Printer</title>
	<key>pdfPrinter</key>
	<description>Configuration Settings For The PDF Printer Extension</description>
	<tabs>
	<general>
	<title>General</title>
	<description>General Extension Settings</description>
	<configurations>
		<EXTENSION_PDF_PRINTER_INSTALLED editable="false">
			<title>Installation Status</title>
			<value>False</value>
			<description></description>
		</EXTENSION_PDF_PRINTER_INSTALLED>
		<EXTENSION_PDF_PRINTER_ENABLED>
			<title>Enable PDF Printer</title>
			<value>True</value>
			<description>Enable Or Disable The PDF Printer Extension</description>
			<sort_order>1</sort_order>
			<set_function>tep_cfg_select_option(array('True','False'),</set_function>
		</EXTENSION_PDF_PRINTER_ENABLED>
		<EXTENSION_PDF_INVOICE_ATTACH_TO_ORDER_EMAIL>
			<title>Attach PDF Invoice to order email</title>
			<value>True</value>
			<description>Attach PDF Invoice to order email</description>
			<sort_order>1</sort_order>
			<set_function>tep_cfg_select_option(array('True','False'),</set_function>
		</EXTENSION_PDF_INVOICE_ATTACH_TO_ORDER_EMAIL>
		<EXTENSION_PDF_AGREEMENT_ATTACH_TO_ORDER_EMAIL>
			<title>Attach PDF Agreement to order email</title>
			<value>True</value>
			<description>Attach PDF Agreement to order email</description>
			<sort_order>1</sort_order>
			<set_function>tep_cfg_select_option(array('True','False'),</set_function>
		</EXTENSION_PDF_AGREEMENT_ATTACH_TO_ORDER_EMAIL>
		<EXTENSION_PDF_ESTIMATE_BUTTON_NORMAL_ORDER>
			<title>Can print normal orders with estimate layout</title>
			<value>False</value>
			<description>Can print normal orders with estimate layout</description>
			<sort_order>1</sort_order>
			<set_function>tep_cfg_select_option(array('True','False'),</set_function>
		</EXTENSION_PDF_ESTIMATE_BUTTON_NORMAL_ORDER>
		<EXTENSION_PDF_AGREEMENT_BUTTON_NORMAL_ORDER>
			<title>Can print normal orders with agreement layout</title>
			<value>False</value>
			<description>Can print normal orders with agreement layout</description>
			<sort_order>1</sort_order>
			<set_function>tep_cfg_select_option(array('True','False'),</set_function>
		</EXTENSION_PDF_AGREEMENT_BUTTON_NORMAL_ORDER>
		<EXTENSION_PDF_PRINTER_INVOICE_LAYOUT>
			<title>Select Invoice Layout</title>
			<value>1</value>
			<description>Select Invoice Layout</description>
			<sort_order>1</sort_order>
			<use_function><![CDATA[tep_cfg_get_layout_name]]></use_function>
			<set_function><![CDATA[tep_cfg_pull_down_layout_list(]]></set_function>
		</EXTENSION_PDF_PRINTER_INVOICE_LAYOUT>
		<EXTENSION_PDF_PRINTER_ESTIMATE_LAYOUT>
			<title>Select Estimate Layout</title>
			<value>1</value>
			<description>Select Estimate Layout</description>
			<sort_order>1</sort_order>
			<use_function><![CDATA[tep_cfg_get_layout_name]]></use_function>
			<set_function><![CDATA[tep_cfg_pull_down_layout_list(]]></set_function>
		</EXTENSION_PDF_PRINTER_ESTIMATE_LAYOUT>
		<EXTENSION_PDF_PRINTER_AGREEMENT_LAYOUT>
			<title>Select Agreement Layout</title>
			<value>1</value>
			<description>Select Agreement Layout</description>
			<sort_order>1</sort_order>
			<use_function><![CDATA[tep_cfg_get_layout_name]]></use_function>
			<set_function><![CDATA[tep_cfg_pull_down_layout_list(]]></set_function>
		</EXTENSION_PDF_PRINTER_AGREEMENT_LAYOUT>
		<EXTENSION_PDF_PRINTER_PACKING_SLIP_LAYOUT>
			<title>Select Packing Slip Layout</title>
			<value>1</value>
			<description>Select Packing Slip Layout</description>
			<sort_order>1</sort_order>
			<use_function><![CDATA[tep_cfg_get_layout_name]]></use_function>
			<set_function><![CDATA[tep_cfg_pull_down_layout_list(]]></set_function>
		</EXTENSION_PDF_PRINTER_PACKING_SLIP_LAYOUT>

	</configurations>
	</general>
	</tabs>
</ConfigurationGroup>