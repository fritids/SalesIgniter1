<ConfigurationGroup>
	<title>Google Analytics</title>
	<key>googleAnalytics</key>
	<description>Configuration Settings For The Gooogle Analytics Extension</description>
	<tabs>
		<general>
			<title>General</title>
			<description>General Extension Settings</description>
			<configurations>
				<EXTENSION_GOOGLE_ANALYTICS_INSTALLED editable="false">
					<title>Installation Status</title>
					<value>False</value>
					<description></description>
				</EXTENSION_GOOGLE_ANALYTICS_INSTALLED>
				<EXTENSION_GOOGLE_ANALYTICS_ENABLED>
					<title>Enable Gooogle Analytics</title>
					<value>False</value>
					<description>Enable Or Disable The Google Analytics Extension</description>
					<set_function>
						<type>radio</type>
						<values>
							<value>True</value>
							<value>False</value>
						</values>
					</set_function>
		</EXTENSION_GOOGLE_ANALYTICS_ENABLED>
		<EXTENSION_GOOGLE_ANALYTICS_TRACKING_GENERAL>
			<title>Gooogle Analytics Tracking Code</title>
			<description>Google Analytics tracking code.</description>
			<sort_order>2</sort_order>
			<set_function>isArea</set_function>
		</EXTENSION_GOOGLE_ANALYTICS_TRACKING_GENERAL>
        <EXTENSION_GOOGLE_ANALYTICS_META_VERIFICATION>
			<title>Gooogle Webmaster Tools Code</title>
			<description>google-site-verification code</description>
			<sort_order>2</sort_order>
		</EXTENSION_GOOGLE_ANALYTICS_META_VERIFICATION>

		<EXTENSION_GOOGLE_ANALYTICS_TRACKING_ID>
			<title>Gooogle analytics tracking id</title>
			<description>UA-xxxxx-x</description>
			<sort_order>2</sort_order>
		</EXTENSION_GOOGLE_ANALYTICS_TRACKING_ID>

		<EXTENSION_GOOGLE_ANALYTICS_CONVERSION_ID>
			<title>Gooogle adwords conversion id</title>
			<description>1234567890</description>
			<sort_order>2</sort_order>
		</EXTENSION_GOOGLE_ANALYTICS_CONVERSION_ID>

		<EXTENSION_GOOGLE_ANALYTICS_USE_TRACKING_ANALYTICS>
			<title>Do you want to track conversions with analytics?</title>
			<value>True</value>
			<description>Do you want to track conversions with analytics?</description>
			<sort_order>1</sort_order>
			<set_function>tep_cfg_select_option(array('True','False'),</set_function>
		</EXTENSION_GOOGLE_ANALYTICS_USE_TRACKING_ANALYTICS>
		<EXTENSION_GOOGLE_ANALYTICS_USE_TRACKING_ADWORDS>
			<title>Do you want to track adwords conversions?</title>
			<value>True</value>
			<description>Do you want to track adwords conversions?</description>
			<sort_order>1</sort_order>
			<set_function>tep_cfg_select_option(array('True','False'),</set_function>
		</EXTENSION_GOOGLE_ANALYTICS_USE_TRACKING_ADWORDS>
			</configurations>
		</general>
	</tabs>
</ConfigurationGroup>